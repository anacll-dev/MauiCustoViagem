<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustoViagem.MainPage"
             Title="Custo de Viagem">
    <ScrollView>
        <StackLayout>
            <Label Text="Origem: "/>
            <Entry x:Name="txt_origem" Margin="0,10,0,10" />

            <Label Text="Destino: "/>
            <Entry x:Name="txt_destino" Margin="0,10,0,10"/>

            <Label Text="Distância: "/>
            <Entry x:Name="txt_distancia" Margin="0,10,0,10"/>

            <Label Text="Rendimento: "/>
            <Entry x:Name="txt_rendimento" Margin="0,10,0,10"/>

            <Label Text="Preço Combustível: "/>
            <Entry x:Name="txt_combustivel" Margin="0,10,0,10"/>

            <Button Text="Calcular" Margin="0,5,0,5"  Clicked="Button_Clicked"/>
            <Button Text="Add Pedagio" Margin="0,5,0,5" Clicked="Button_Clicked_1"/>
            <Button Text="Lista Pedagio" Margin="0,5,0,5" Clicked="Button_Clicked_2"/>

        </StackLayout>
    </ScrollView>

</ContentPage>
