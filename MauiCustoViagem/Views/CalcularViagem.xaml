<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCustoViagem.Views.CalcularViagem"
             Title="CalcularViagem">
    <ScrollView>
        <StackLayout>
            <Label Text="Origem: "/>
            <Label x:Name="lbl_origem"/>

            <Label Text="Destino: "/>
            <Label x:Name="lbl_destino"/>

            <Label Text="Valor: "/>
            <Label x:Name="lbl_valor"/>

            <Button Text="Calcular" Clicked="Button_Clicked_2" Margin="0,5,0,5"/>
            <Button Text="Calcular Nova Viagem" Clicked="Button_Clicked_1" Margin="0,5,0,5"/>
        </StackLayout>
    </ScrollView>
</ContentPage>